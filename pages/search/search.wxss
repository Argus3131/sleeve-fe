.icon {
    width: 24rpx;
    height: 24rpx;
}

.search-container {
    position: fixed;
    top: 0;
    background-color: #fff;
    height: 100rpx;
    width: 100%;
    border-top: 1px solid #f5f5f5;
    border-bottom: 1px solid #f5f5f5;
    box-shadow: 0 0 3px 0 #e3e3e3;
    display: flex;
    flex-direction: column;
    justify-content: center;
    z-index: 99;

}

.holder {
    font-size: 20rpx !important;
    color: #333 !important;
}

.kwd-container {
    /*box-sizing: border-box;*/
    max-width: 700rpx;
    max-height: 300rpx;
    display: flex;
    flex-direction: row;
    /*align-items: center;*/
    flex-wrap: wrap;
    padding-left: 30rpx;
    margin-top: 24rpx;
}
.history {
    position: relative;
}


.cancel {
    font-size: 24rpx !important;
    color: rgb(7, 7, 7);
}

.tags-container {
    margin-top: 20rpx !important;
    margin-right: 20rpx !important;
}

.tab-container .head {
    margin-top: 150rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 27rpx;
    color: #999;
    font-weight: 550;
}

.tab-container .head2 {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    font-size: 27rpx;
    color: #999;
    font-weight: 550;
}

.tab {
    height: 32rpx;
    border-left: 7px solid #999;
    margin-left: 18rpx;
    margin-right: 18rpx;
}

.tags {
    margin-bottom: 20rpx !important;
    margin-right: 20rpx !important;
}

.del {
    position: absolute;
    top: 320rpx;
    right: 0;
    left: 0;
    display: flex;
    flex-direction: row;
    margin: 0 auto;
    color: #666;
    font-size: 24rpx;
    font-weight: 400;
    align-items: center;
    justify-content: center;
}

.del text {
    margin-left: 10rpx;
}

.none-c {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #bbbbbb;
    font-weight: 400;
    font-size: 22rpx;
}

.none {
    width: 200rpx;
    height: 200rpx;
}
.water-flow {
    margin-top: 30rpx;
}

.test {
    padding-bottom: 0 !important;
}

.result-container {
    width: 100%;
    padding-top: 120rpx;
}
/* pages/product/product.wxss */

.container {
    width: 100%;
    position: relative;
}

.spu-card {
    position: relative;
}

.life-container {
    position: relative;
    width: 100% !important;
    background-color: #fff !important;
    overflow: hidden;
}

.life-product-container {
    padding: 0 10rpx;
    display: flex;
    flex-direction: column;
}

.discount-box {
    position: absolute;
    float: left;
    z-index: 4;
}

.life-title {
    /* margin-left: 10rpx !important; */
    font-size: 36rpx !important;
    font-weight: 500;
    color: #222 !important;
}

.life-product-contianer {
    margin-top: 15rpx;
}

.tag {
    height: 30rpx !important;
    line-height: 30rpx !important;
}

.art-content {
    max-width: 550rpx;
    font-size: 24rpx;
    text-align: justify;
    color: #999;
    margin-top: 30rpx;
    margin-bottom: 20rpx;
    display: flex;
    flex-wrap: wrap;
}

.slogan {
    margin-top: 5rpx;
}

.price-container {
    margin-top: 5rpx;
    position: relative;
}

.del-price {
    margin-left: 10rpx;
}

.unit {
    margin-right: 10rpx !important;
}

.share-container {
    display: flex;
    width: 78rpx;
    height: 120rpx;
    margin-left: 20rpx;
    flex-direction: row;
    justify-content: flex-end;
    position: absolute;
    right: 15rpx;
    border-left: 2px dashed #f5f5f5;
}

.share {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background-color: #FB7299;
    width: 50rpx;
    height: 120rpx;
    border-radius: 4px;
    overflow: hidden;
}


.button {
    opacity: 0.7 !important;
    transition: opacity 1s !important;
    margin-bottom: 4rpx;
}

.button:hover {
    color: white !important;
    opacity: 1 !important;
}

.share text {
    color: #fff;
    font-family: "SourceHanSansCN-Normal";
    font-size: 20rpx;
    font-weight: 400;
    position: relative;

}

.t1 {
    margin-top: 4rpx;
    margin-bottom: 4rpx;
}


.t2 {
    margin-bottom: 4rpx;
}

.spec {
    margin-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    width: 100%;
    height: 80rpx;
    background-color: #fff;
    font-size: 26rpx;
    color: #f25d8e;
    font-weight: 600;
    justify-content: space-between;
}

.open {
    width: 64rpx;
    height: 64rpx;
    padding-right: 30rpx;
    opacity: 0.7 !important;
    transition: opacity 1s !important;
}

.open:hover {
    width: 80rpx;
    height: 80rpx;
    opacity: 1 !important;
}

.specification {
    padding-left: 30rpx;
}

.specification .title {
    color: #999;
    font-weight: 500;
}

.tag-small {
    font-family: "SourceHanSansCN-Normal" !important;
    font-size: 18rpx !important;
    font-weight: 400 !important;
    line-height: 1rpx;
}


.cartTab {
    position: fixed;
    width: 100%;
    bottom: 0;
}

.button {
    display: inline-block;
    text-align: center;
    /* padding: 20rpx 20rpx 20rpx 20rpx; */
    font-family: "SourceHanSansCN-Normal";
    font-size: 24rpx;
    font-weight: 400;
}

.sku-tab {
    padding-bottom: 200rpx;
}

.realm {
    width: 100%;
    /* padding-bottom: 102rpx; */
    box-shadow: 1px -1px 1px #e3e3e3;
    position: fixed;
    z-index: 100;
    bottom: 0;
}

.explain {
    margin-top: 10rpx;
    background-color: #fff;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.detail-img-container image{
    display: flex;
    width: 100%;
}
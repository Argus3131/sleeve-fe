<!--pages/category/category.wxml-->
<view class="container">
    <view class="search-container">
        <l-button bind:lintap="onGotoSearch" width="710" height="60" icon="research" icon-size="24" icon-color="#C4C9D2"
                shape="semicircle" l-class="search-btn">搜索商品</l-button>
    </view>

    <view class="category-container">
        <view class="main" style="height:{{h}}rpx">
            <!--    开启even会导致scrollable失效-->
            <l-segment bind:linchange="changeTabs" placement="left" scrollable="{{true}}" item-height="90" height="{{h}}"
                    even="{{false}}" active-key="{{defaultRootId}}" l-active-class="segment-item-active"
                    l-inactive-class="segment-item" l-line-class="l-seg-line">
                <block wx:for="{{roots}}" wx:for-index="index" wx:for-item="item">
                    <l-segment-item tab="{{item.name}}" key="{{index}}"></l-segment-item>
                </block>
            </l-segment>
        </view>
        <view class="right">
            <s-categories categories="{{categories}}" bannerImg="{{bannerImg}}" bind:linitemtap="onJumpToSpuList"/>
        </view>

    </view>
<!--    <l-popup show="{{flag}}" content-align="bottom">-->
<!--        <s-search wx:if="{{flag}}"/>-->
<!--    </l-popup>-->

</view>

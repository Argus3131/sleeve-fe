/* components/share/index.wxss */

.share {
  position: relative;
  bottom: 15rpx;
  display: flex;
  flex-direction: column;
  align-items: center;

}

.button {
  opacity: 0.7 !important;
  transition: opacity 1s !important;
}

.button:hover {
  color: white !important;
  opacity: 1 !important;
}

.share .text {
  color: #fff;
  font-family: "SourceHanSansCN-Normal";
  font-size: 20rpx;
  font-weight: 400;
  letter-spacing: 2px;
  position: relative;
  bottom: 40rpx;
  width: 25rpx;
  line-height: 25rpx;
  -webkit-writing-mode: vertical-rl;
  writing-mode: vertical-rl;
}

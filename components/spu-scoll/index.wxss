/* components/scoll-area/index.wxss */

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* height: 500rpx; */
    background-color: #fff;
}

 


.scroller_img {
  width: 690rpx;
  height: 88rpx;
  margin-top: 40rpx;
}

.scroller {
  width: 100%;
  white-space: nowrap;
  display: flex;
  flex-direction: row;
}

.scoller-item {
  display: inline-block;
  /* width: 200rpx; */
  flex-direction: column;
  align-items: center;
  margin: 20rpx 5rpx 5rpx 35rpx;
}

.item-img {
  width: 160rpx;
  height: 160rpx;
}

.scoller-inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  /* height: 300rpx; */
  margin-bottom: 30rpx;
}

.title {
  font-size: 18rpx;
  max-width: 108rpx;
  text-overflow: ellipsis;
  overflow: hidden;
}

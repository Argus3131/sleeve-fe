<!--components/sellingList/index.wxml 热卖榜单自适应图片arr.length 加载-->
<view class="container">
  <image src="{{selling.img}}" class="img" />
  <view class="selling-list">
    <view class="left">
      <block wx:for="{{left}}" wx:key="key" wx:for-index="idx" wx:for-item="item">
        <view hover-class="rect-hover" hover-stay-time="300">
          <image class="left-item-{{idx}}" src="{{item.img}}" data-id="{{item.id}}" style="width:{{leftWidth}}rpx;height:{{leftHeight}}rpx;" bindtap="onSelling" />
        </view>

      </block>
    </view>
    <view class="right">
      <block wx:for="{{right}}" wx:key="key" wx:for-index="idx" wx:for-item="item">
        <view hover-class="rect-hover" hover-stay-time="500">
          <image src="{{item.img}}" data-id="{{item.id}}" style="width:{{rightWidth}}rpx;height:{{rightHeight}}rpx;" bindtap="onSelling" />
        </view>

      </block>
    </view>
  </view>
</view>

.container {
    box-sizing: border-box;
    height: 60rpx;
    border-radius: 4px;
    overflow: hidden;
    padding-left: 15rpx;
    padding-right: 15rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #f5f5f5;
    font-size: 26rpx;
    font-weight: 400;
    color: rgb(0, 0, 0);
    border: 2rpx solid #fff;

}

.img {
    width: 40rpx;
    height: 40rpx;
    padding-right: 10rpx;
}

/*禁用状态*/
.forbidden {
    border: 2rpx dashed #bbb;
    color: #bbb;
    background-color: #fff;
}

/*选中状态*/
.selected {
    border: 2rpx solid #f5f5f5;
    background-color: #A8A8AA;
    color: #fff;
}


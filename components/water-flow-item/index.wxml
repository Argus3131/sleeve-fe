<!-- waterFlowItem.wxml -->
<wxs src="../../filter/filter.wxs" module="tools"/>

<view class="container" hover-class="rect-hover" hover-stay-time="400">
    <l-discount class='discount-box' wx:if="{{tools.isHasDisCount(data.delCount)}}"/>
    <l-card full="{{false}}" type="cover" image="{{data.image}}" title="{{data.title}}" l-class="life-container"
            l-img-class="{{tools.isHasDisCount(data.delCount)?'discount-img':'common-img'}}" l-title-class="product-title"
            bindtap="onTapping" data-id="{{data.id}}">
        <view class='product-container'>
            <l-slogan class='slogan' slogan="{{data.tags}}"/>
            <view class='price-container'>
                <l-price unit="ï¿¥" value="{{data.count}}" value-color="#157658" unit-color="#157658" value-size="26"
                        unit-size="26" unit-bold="400" value-bold="400" autofix reserve-digit="2"></l-price>
                <!-- 157658 -->
                <!--        {{data.delCount}}-->
                <l-price wx:if="{{tools.isHasDisCount(data.delCount)}}" l-class="del-price" unit="ï¿¥" value="{{data.delCount}}"
                        value-color="#ad0e11" unit-color="#ad0e11" deleted del-color="#666" value-color="#666"
                        unit-color="#666" value-size="18" unit-size="18"></l-price>
            </view>
            <view class='art-content'>{{data.describe}}</view>
        </view>
    </l-card>
</view>
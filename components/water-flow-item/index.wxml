<!-- waterFlowItem.wxml -->
<wxs src="../../filter/price.wxs" module="tools"/>

<view class="container" hover-class="rect-hover" hover-stay-time="400">
    <l-discount class='discount-box' wx:if="{{tools.isHasDisCount(data.discount_price)}}"/>
    <l-card full="{{false}}" type="cover" image="{{data.img}}" title="{{data.title}}" l-class="life-container"
            l-img-class="{{tools.isHasDisCount(data.discount_price)?'discount-img':'common-img'}}" l-title-class="product-title"
            bindtap="onTapping" data-id="{{data.id}}">
        <view class='product-container'>
            <l-slogan class='slogan' slogan="{{data.tags}}"/>
            <view class='price-container'>
                <l-price unit="ï¿¥" value="{{tools.mainPrice(data.price,data.discount_price).price}}" value-color="#157658"
                        unit-color="#157658" value-size="26"
                        unit-size="26" unit-bold="400" value-bold="400" autofix reserve-digit="2"></l-price>
                <l-price wx:if="{{tools.slashPrice(data.price,data.discount_price).display}}" l-class="del-price" unit="ï¿¥"
                        value="{{tools.slashPrice(data.price,data.discount_price).price}}"
                        value-color="#ad0e11" unit-color="#ad0e11" deleted del-color="#666" value-color="#666"
                        unit-color="#666" value-size="18" unit-size="18"></l-price>
            </view>
            <view class='art-content'>{{data.subtitle}}</view>
        </view>
    </l-card>
</view>
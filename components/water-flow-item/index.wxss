.container {
  width: 100%;
}

.life-container {
  width: 340rpx !important;
  padding: 0 20rpx 0 0 !important;
  background-color: #fff !important;
  box-shadow: 0px 8rpx 20rpx 0px rgba(221, 221, 221, 0.5) !important;
  border-radius: 5rpx !important;
  overflow: hidden;
  margin-bottom: 30rpx;
}

.life-img1 {
  width: 350rpx !important;
  height: 350rpx !important;
}

.life-img2 {
  width: 350rpx !important;
  height: 480rpx !important;
}

.life-product-contianer {
  padding: 0 10rpx;
  display: flex;
  flex-direction: column;
}

.discount-box {
  position: absolute;
  float: left;
  z-index: 4;
}

.life-title {
  margin-left: 10rpx !important;
  font-size: 26rpx !important;
  font-weight: 500;
}

.tag {
  height: 30rpx !important;
  line-height: 30rpx !important;
}

.art-content {
  font-size: 24rpx;
  text-align: justify;
  color: #999;
  margin-bottom: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.slogan {
  margin-top: 10rpx;
}

.price-container {
  margin-top: 5rpx;
}

.del-price {
  margin-left: 10rpx;
}

/* components/sub-catrgory/index.wxss */
.container {
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff;
}

/* 必须给一个宽度否则会导致无法自适应均分排列 */
.inner-container{
    width: 510rpx;
}

.tab {
    color: #999;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 15px;
    padding: 20rpx;
}

.grid-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-bottom: 36rpx;
}

.grid-item text {

    font-size: 20rpx;
    font-weight: 500;
    color: #333333;
    margin-top: 6rpx;
}


.img {
    width: 100rpx;
    height: 100rpx;
}

.banner {
    width: 510rpx;
    height: 200rpx;
    margin-top: 16rpx;
}   